{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "CrossCult Admin and User API",
        "description": "API documentation for managing Admins and Users"
    },
    "host": "localhost:3002",
    "basePath": "/api",
    "tags": [
        {
            "name": "Admin",
            "description": "Operations related to admin management"
        },
        {
            "name": "User",
            "description": "Operations related to user management"
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/admins/register": {
            "post": {
                "tags": [
                    "Admin"
                ],
                "summary": "Register a new admin",
                "description": "Allows registering a new admin account.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Admin object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Admin"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Admin created successfully"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/admins/login": {
            "post": {
                "tags": [
                    "Admin"
                ],
                "summary": "Admin login",
                "description": "Authenticate admin with email and password, along with optional OTP verification.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Login credentials",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                },
                                "otp": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login successful"
                    },
                    "400": {
                        "description": "Invalid credentials or OTP"
                    },
                    "404": {
                        "description": "Admin not found"
                    }
                }
            }
        },
        "/admins": {
            "get": {
                "tags": [
                    "Admin"
                ],
                "summary": "Get all admins",
                "description": "Retrieve a list of all registered admins.",
                "responses": {
                    "200": {
                        "description": "List of admins"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/admins/{id}": {
            "get": {
                "tags": [
                    "Admin"
                ],
                "summary": "Get admin by ID",
                "description": "Retrieve admin details by ID.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Admin ID",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Admin details"
                    },
                    "404": {
                        "description": "Admin not found"
                    }
                }
            },
            "put": {
                "tags": [
                    "Admin"
                ],
                "summary": "Update admin by ID",
                "description": "Modify admin details by ID.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Admin ID",
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Admin object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Admin"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Admin updated successfully"
                    },
                    "404": {
                        "description": "Admin not found"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Admin"
                ],
                "summary": "Delete admin by ID",
                "description": "Remove admin by ID.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Admin ID",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Admin deleted"
                    },
                    "404": {
                        "description": "Admin not found"
                    }
                }
            }
        },
        "/users/register": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Register a new user",
                "description": "Allows registering a new user account.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "User login",
                "description": "Authenticate user with email and password.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Login credentials",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login successful"
                    },
                    "400": {
                        "description": "Invalid credentials"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/users": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get all users",
                "description": "Retrieve a list of all registered users.",
                "responses": {
                    "200": {
                        "description": "List of users"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get user by ID",
                "description": "Retrieve user details by ID.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "User ID",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User details"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            },
            "put": {
                "tags": [
                    "User"
                ],
                "summary": "Update user by ID",
                "description": "Modify user details by ID.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "User ID",
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User updated successfully"
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            },
            "delete": {
                "tags": [
                    "User"
                ],
                "summary": "Delete user by ID",
                "description": "Remove user by ID.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "User ID",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User deleted"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        }
    },
    "definitions": {
        "Admin": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "notification_email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "email",
                "notification_email",
                "password"
            ]
        },
        "User": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "profile_picture": {
                    "type": "string"
                },
                "bio": {
                    "type": "string"
                },
                "fav_Country": {
                    "type": "string"
                },
                "preferences": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "history",
                            "food"
                        ]
                    }
                }
            },
            "required": [
                "name",
                "username",
                "email",
                "password"
            ]
        }
    }
}