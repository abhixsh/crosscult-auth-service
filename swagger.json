{
    "swagger": "2.0",
    "info": {
        "description": "API for managing admin users and providing OTP-based authentication for login",
        "version": "1.0.0",
        "title": "Admin Authentication API"
    },
    "host": "localhost:3002",
    "basePath": "/api/admins",
    "schemes": [
        "http"
    ],
    "paths": {
        "/register": {
            "post": {
                "summary": "Register a new admin",
                "tags": [
                    "Admins"
                ],
                "parameters": [
                    {
                        "name": "admin",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Admin"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Admin registered successfully",
                        "schema": {
                            "$ref": "#/definitions/Admin"
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "Admin login with OTP verification",
                "tags": [
                    "Admins"
                ],
                "parameters": [
                    {
                        "name": "loginData",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/LoginData"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OTP sent or login successful",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid credentials or OTP"
                    },
                    "404": {
                        "description": "Admin not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/:id": {
            "get": {
                "summary": "Get admin by ID",
                "tags": [
                    "Admins"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Admin data",
                        "schema": {
                            "$ref": "#/definitions/Admin"
                        }
                    },
                    "404": {
                        "description": "Admin not found"
                    }
                }
            },
            "put": {
                "summary": "Update admin by ID",
                "tags": [
                    "Admins"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "admin",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Admin"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Admin updated successfully",
                        "schema": {
                            "$ref": "#/definitions/Admin"
                        }
                    },
                    "404": {
                        "description": "Admin not found"
                    }
                }
            },
            "delete": {
                "summary": "Delete admin by ID",
                "tags": [
                    "Admins"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Admin deleted successfully"
                    },
                    "404": {
                        "description": "Admin not found"
                    }
                }
            }
        }
    },
    "definitions": {
        "Admin": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "notification_email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "LoginData": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "otp": {
                    "type": "string"
                }
            }
        }
    }
}
